<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open Modal</button>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
            @using (Html.BeginForm("NovaOsoba", "Osobe"))
            {
                <div class="form-group">
                    @Html.LabelFor(c => c.Ime)
                    @Html.TextBoxFor(c => c.Ime, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(c => c.Prezime)
                    @Html.TextBoxFor(c => c.Prezime, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(c => c.Kancelarija)
                    @Html.TextBoxFor(c => c.Kancelarija, new { @class = "form-control" })
                </div>
                @Html.HiddenFor(c => c.Id)
            }   
            </div>
            <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Sacuvaj</button>
            </div>
        </div>

    </div>
</div>